{
  "name": "convert-buddy-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm -w convert-buddy-js run build",
    "build:wasm": "npm -w convert-buddy-js run build:wasm",
    "test": "npm -w convert-buddy-js run test",
    "test:crate": "cd D:/Dev/convert-buddy/crates/convert-buddy && wasm-pack test --node",
    "lint": "npm -w convert-buddy-js run lint",
    "clean": "npm -w convert-buddy-js run clean",
    "bench": "npm -w convert-buddy-js run bench",
    "bench:competitors": "npm -w convert-buddy-js run bench:competitors"
  }
}
